<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:toolkit="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls.Toolkit" x:Class="BitTorrent.WP7.Toolkit.ProgressSplashBar"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480">

    <Grid x:Name="LayoutRoot" Height="800" Width="480">

    	<!--toolkit:PerformanceProgressBar x:Name="progressBar" Height="20" Margin="8,0" VerticalAlignment="Top" Background="#FF28A1EF" Foreground="#FF28A1EF" /-->
		<toolkit:PerformanceProgressBar x:Name="progressBar" Height="20" Margin="8,22,8,0" VerticalAlignment="Top" Background="#FF28A1EF" Foreground="#FF28A1EF" />
    	<TextBlock x:Name="Message" HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding Message}" VerticalAlignment="Top" FontSize="14.667" Margin="15,32,0,0"/>
    </Grid>
</UserControl>

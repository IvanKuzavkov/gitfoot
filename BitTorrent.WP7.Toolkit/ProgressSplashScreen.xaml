<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:toolkit="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls.Toolkit" x:Class="BitTorrent.WP7.Toolkit.ProgressSplashScreen"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="800" d:DesignWidth="480">

    <Grid x:Name="LayoutRoot" Width="480" Height="800" Opacity="0.5">
    	<Grid.Background >
    		<SolidColorBrush Color="{StaticResource PhoneBackgroundColor}"/>
    	</Grid.Background>
        <TextBlock HorizontalAlignment="Center" Margin="0,656,0,114" x:Name="message" Text="{Binding Message}" FontSize="22" />
    	<toolkit:PerformanceProgressBar x:Name="progressBar" Height="19" Margin="8,0,8,89" VerticalAlignment="Bottom" Background="#FF28A1EF" Foreground="#FF28A1EF" />
    </Grid>
</UserControl>
